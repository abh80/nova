#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"
echo "ğŸš€ Starting commit message hook..."
echo "----------------------------------"
message="$(cat "$1")"
requiredPattern="^(add|cut|fix|bump|make|start|stop|refactor|reformat|optimise|document|merge): .*$"

if ! echo "$message" | grep -Eq "$requiredPattern"; then
  echo "------------------------"
  echo "ğŸš¨ Wrong commit message! ğŸ˜•"
  echo "------------------------"
  echo "Hey you! Yes you! ğŸ˜’"
  echo "Don't go around not making your commit messages unclear"
  echo "------------------------"
  echo "ğŸ“ The commit message must have this format:"
  echo "<verb in imperative mood> <what was done>"
  echo "ğŸ”¤ Allowed verbs in imperative mood: add, cut, fix, bump, make, start, stop, refactor, reformat, optimise, document, merge"
  echo "ğŸ–‹ï¸ Example: add: login button"
  echo "------------------------"
  echo "ğŸ§ Your commit message was:"
  echo "$message"
  echo "------------------------"
  echo "â„¹ï¸ For more information, check script in .husky/commit-msg"
  echo "------------------------"
  exit 1
else
  echo "ğŸ‰ Commit message hook completed. Happy contributing â¤ï¸"
fi

echo
exit 0